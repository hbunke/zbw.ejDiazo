<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>


<div metal:fill-slot="main"
    tal:define="manager python:'Manager' in portal_state.member().getRolesInContext(context);
                teaser view/get_teaser;">
<!--
<p id="togglejumbo">
    <a id="showjumbo" href="#">Show Jumbo</a>
    <a id="hidejumbo" href="#">Hide Jumbo</a>
</p> -->
<!-- <div id="ejumbo">
        <img src="++theme++zbw.ejDiazo/static/img/logo.title.inv.slogan.png" class="img-responsive" />
</div> -->



<div class="container" id="sections">

    <div class="row" tal:condition="teaser">
        <div class="col-md-12" id="featured"  tal:define="picture nocall:teaser/picture">
            <!-- <i class="fa fa-star-o fa-3x" aria-hidden="true"></i>
            <h2>Featured</h2> -->
            <!--<h2>Feature Block -- Perhaps and Maybe Long Long Article Title with many meaningless words, questions and
            teasing vocabulary</h2>-->


            <div id="section-feature">
                <h2 tal:content="teaser/title" />
                <div style="float:right; padding:10px 0px 10px 25px" tal:condition="manager">
                    <a tal:attributes="href string:${teaser/absolute_url}" style="color:white">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </div>
            </div>

            <div class="ej_feature">
                <!--<img src="++theme++zbw.ejDiazo/static/img/example.png" class="img-responsive"/> -->
                <!--<img tal:attributes="src string:${teaser/absolute_url}/@@download/picture/${picture/filename}/" />-->
                <!--<img tal:replace="structure teaser/@@images/picture/mini" /> -->

                <figure id="teaser_image" >
                    <img
                        tal:attributes="src string:${teaser/absolute_url}/@@download/picture/${picture/filename}"
                        class="img-responsive" />
                    <figcaption tal:condition="teaser/caption" tal:content="teaser/caption" />
                </figure>

                <div id="teasertext" tal:content="structure teaser/teasertext"></div>

                <tal:block tal:condition="teaser/url">
                    <div id="teaserlink"><a href="#" tal:attributes="href teaser/url"><span class="label label-teaser">Read More...</span></a></div>
                </tal:block>

            </div>

        </div>

    </div>

    <div class="row">
        <div class="col-md-6 ej_section">
            <div id="section-ja">
                <i class="fa fa-check-circle-o fa-3x" aria-hidden"true" />
                <h2>Journal Articles</h2>
            </div>
            <div class="ej-section-text">
                <div class="latest"
                    tal:define="papers view/get_latest_ja;
                                Batch python:modules['Products.CMFPlone'].Batch;
                                b_start python:request.get('b_start',0);
                                papers_per_page python:100;">
                    <metal:macro use-macro="context/paper_macros/macros/paper_list_entry" />
                </div>
                    <p style="text-align:center"><a href="#" tal:attributes="href string:${portal_url}/economics/journalarticles"><span class="label label-ja">All Journal Articles</span>
                        </a></p>
            </div>
        </div>

        <div class="col-md-6 ej_section">
            <div id="section-dp">
                <i class="fa fa-comments-o fa-3x" aria-hidden"true" />
                <h2> Discussion Papers</h2>
            </div>
            <div class="ej-section-text">
                <!--<p>The Economics Discussion Paper Series contains all recent contributions
                that are open for discussion while pending acceptance for publication as
                Journal Articles, as well as all older papers that have either
                been accepted or rejected or that are withdrawn by the authors from
                publication. Readers are asked to take part
                in the discussion of a paper by uploading comments.</p>-->
                <div class="latest"
                    tal:define="papers view/get_latest_dp;
                                Batch python:modules['Products.CMFPlone'].Batch;
                                b_start python:request.get('b_start',0);
                                papers_per_page python:100;
                                ">
                <metal:macro use-macro="context/paper_macros/macros/paper_list_entry" />
                </div>
                <p style="text-align:center"><a tal:attributes="href string:${portal_url}/economics/discussionpapers" href="#"><span class="label label-dp">All Discussion Papers</span>
                </a></p>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6 col-md-offset-3 ej_section">
            <div id="section-news">
                <i class="fa fa-bullhorn fa-3x" aria-hidden="true"></i>
                <h2>Announcements</h2>
            </div>
            <div class="ej-section-text">
                <tal:newsitems tal:repeat="nitem view/get_news">
                    <p>
                         <a tal:attributes="href string:${nitem/getURL}" tal:content="nitem/pretty_title_or_id" />
                     </p>
                </tal:newsitems>

            </div>
        </div>
    </div>






</div>





</div>
</body>

</html>
